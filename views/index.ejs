<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-do list</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="main">
     <div class="profile">
      <button class="lgout"> <a href="/logout">Log-out</a></button>
    </div>
        <img class="ham" id="ham3"src="ham.png" alt="" width="30">
        <div class="taskbar">
          <nav><ul>
            <li ><a href="/user">Today</a></li>
            <li ><a href="/impl">Important</a></li>
            <li ><a href="/cmplt">Completed</a></li>
            <li><a href="/all">All Tasks</a></li>
          </ul></nav>
        </div>
        <div class="rem" id="content">
          <div class="today">
           <span class="date" id="month">My Day</span>
           <span class="date" id="whole"></span>
          </div>
          
          <% if(newlistitems.length!=0){ %>
            <div class="taskf">
              <ul class="ul1">
                
                                   
                                      
                <% newlistitems.forEach(function(item){ %>
                  <li class="li1">
              
                    <form action="/cmpl" class="del" method="post">
                      <input type="checkbox" onChange="this.form.submit()" value="<%=item.id%>" name="cmp">
                    </form>
                    <span class="del3" ><%= item.name %></span>
                    
                    <span class="due"> Do before: <%= item.time %></span>
                    <form action="/due" id="<%=item.id%>1" onmouseout="show(id)" class="addpro non" method="post">
                      <input type="number" name="prog" value="<%=item.progress%>">
                      <input type="hidden" name="dueid" value="<%=item._id%>">
                    </form>
                    <span class="progress" id="<%=item.id%>" onclick="hide(id)"><%=item.progress %>%</span>
                    <span class="text12">completed</span>
                    <% if(item.type=="unimportant") { %>
                      <form action="/imp" class="del2"  method="post">
                        <button type="submit"  value="<%=item.id %>" name="imp"><img src="unfav.png" alt="" width="20"></button>
                      </form>
                      <% }else{ %>
                        <form action="/unimp" class="del2"  method="post">
                          <button type="submit"  value="<%=item.id %>" name="imp"><img src="fav.png" alt="" width="20"></button>
                        </form>
                        <% } %>

                    <form action="/delete" class="del2" method="post">
                      <button type="submit" value="<%=item.id%>" name="delete"><img src="del.png" alt="" width="20"></button>
                    </form>
                    
                    
                  </li>
                  <% }) %>
              </ul>
            </div>
           <% } %>
           <% if(newlistitems.length==0) { %>
            <div class="taske">
              <h1>Noo task Today</h1>
              <h2>Enjoy Your day or you are here to add some</h2>
            </div>
           <% } %>
          <div class="addtsk">
            <form class="add"action="/"method="post">
              <input type="text"  class="tsk6" name="newtask" required placeholder="Add Task">
              <input type="time" class="date2" name="time">
              <button class="" type="submit" name="button"><img src="add.png" alt="" width="20"></button>
              
            </form>
          </div>
       </div>
        
        
         
          <div id="tsk"></div>
          <div id="imp"></div>
         </div>
     </div>
    <script src="script.js"></script>
</body>
</html>